# OpenAI API Configuration
# Copy this file to .env and add your actual API key

# Your OpenAI API key for transcription
# Get one at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-api-key-here

# Your Anthropic API key for transcript editing
# Get one at: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# Optional: Choose transcription model
# Options: auto, gpt-4o-transcribe, gpt-4o-mini-transcribe, whisper-1
# Default: auto (uses gpt-4o-transcribe for quality, whisper-1 for timestamps)
TRANSCRIPTION_MODEL=auto

# Optional: Default cleaning level
# Options: light, moderate, aggressive
# Default: moderate
CLEANING_LEVEL=moderate

# Optional: Cache transcripts to avoid re-running API calls
# Options: true, false
# Default: true
USE_TRANSCRIPT_CACHE=true

# Optional: Directories
TEMP_DIR=./temp
TRANSCRIPT_CACHE_DIR=./transcripts
FCPXML_EXPORTS_DIR=./fcpxml_exports
FCPXML_OUTPUTS_DIR=./fcpxml_outputs